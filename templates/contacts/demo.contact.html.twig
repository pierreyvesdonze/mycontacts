{% extends "base.html.twig" %}

{% block body %}

<div class="row">
    <div class="col s12 m6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">{{ contact.firstName }} {{ contact.lastName }}</span>
                <ul class="collection">
                    <li class="collection-item">
                        <i class="material-icons">local_phone</i>
                        <span>
                            {{ contact.phoneNumber }}
                        </span>
                    </li>
                    <li class="collection-item">
                        <i class="material-icons">email</i>
                        <span>
                            {{ contact.email }}
                        </span>
                    </li>
                    <li class="collection-item">
                        <i class="material-icons">location_on</i>
                        <span>
                            {{ contact.address }}
                        </span>
                    </li>
                    <li class="collection-item">
                        <i class="material-icons">local_offer</i>
                        <span>
                            {{ contact.category.title }}
                        </span>
                    </li>
                </ul>
            </div>
            <div class="card-action">
                <a href="#" onclick="return confirm('Vous ne pouvez pas avoir accès à cette fonction en mode démo');"><i class="medium material-icons">edit</i></a>
                <a href="#"
                    onclick="return confirm('Vous ne pouvez pas avoir accès à cette fonction en mode démo');"><i
                        class="medium material-icons">delete</i></a>
            </div>
        </div>
    </div>
</div>

<div>
    <a href="{{ path('contacts_demo') }}" class="waves-effect waves-light btn">Retourner à la liste des contacts</a>
</div>
{% endblock %}